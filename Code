#include <M5Stack.h>

#define NOTE_C1 262
#define NOTE_C2 294
#define NOTE_C3 330 
#define NOTE_C4 350
#define NOTE_C5 393
#define NOTE_C6 441
#define NOTE_C7 495

#define NOTE_C1H 525
#define NOTE_C2H 589
#define NOTE_C3H 661
#define NOTE_C4H 700
#define NOTE_C5H 786
#define NOTE_C6H 882
#define NOTE_C7H 990

#define NOTE_C1L 131 
#define NOTE_C2L 147
#define NOTE_C3L 165
#define NOTE_C4L 175
#define NOTE_C5L 196
#define NOTE_C6L 221
#define NOTE_C7L 248
SPEAKER Speaker;

int noteNum = 29;
int melody[] = {
  NOTE_C5L, NOTE_C5L, NOTE_C6L, NOTE_C5L, NOTE_C1, NOTE_C7L, 
  NOTE_C5L, NOTE_C5L, NOTE_C6L, NOTE_C5L, NOTE_C2, NOTE_C1,
  NOTE_C5L, NOTE_C5L, NOTE_C5, NOTE_C3, NOTE_C1, NOTE_C7L, NOTE_C6L, 
  NOTE_C4, NOTE_C4, NOTE_C3, NOTE_C1, NOTE_C2, NOTE_C1
};
int noteDurations[]={
  8,8,4,4,4,2,
  8,8,4,4,4,2,
  8,8,4,4,4,4,4,
  8,8,4,4,4,2}; 

void setup() {
  M5.begin();
  
  for (int thisNote = 0; thisNote < noteNum; thisNote++) {
    int noteDuration = 2000 / noteDurations[thisNote];
    int pauseBetweenNotes = noteDuration * 1.30;
    if (melody[thisNote]!='0')
      {M5.Speaker.tone(melody[thisNote],noteDuration);
      }
    else
      {M5.Speaker.mute();}
      delay(pauseBetweenNotes);
      M5.Speaker.mute();
  }
}

void loop(){
  
}
